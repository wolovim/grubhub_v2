<div class="page-border">
  <%- model_class = Item -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @item.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @item.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:categories) %>:</strong></dt>
    <dd><%= @item.display_categories %></dd>
    <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
    <dd><%= @item.unit_price_dollars %></dd>
    <dt><strong>Image:</strong></dt>
    <dd><%= image_tag @item.image.url(:small) %></dd>
  </dl>

  <div class="form-actions">
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_item_path(@item), :class => 'btn btn-primary' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_item_path(@item),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
</div>
